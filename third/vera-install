#!/bin/bash

CDIR=$(pwd)

cd  build/vera-plusplus
mkdir -p build
cd build
echo "cmake .. -DVERA_LUA=OFF -DVERA_USE_SYSTEM_BOOST=ON -DCMAKE_INSTALL_PREFIX=${CDIR}/build -DBoost_NO_BOOST_CMAKE=ON -DVERA_USE_PYTHON_VERSION_MIN=${PYTHON_MIN_VERSION}" -DVERA_PYTHON=Off
cmake .. -DVERA_LUA=OFF -DVERA_USE_SYSTEM_BOOST=ON -DCMAKE_INSTALL_PREFIX=${CDIR}/build -DBoost_NO_BOOST_CMAKE=ON -DVERA_USE_PYTHON_VERSION_MIN=${PYTHON_MIN_VERSION} -DVERA_PYTHON=Off
make 
make install

